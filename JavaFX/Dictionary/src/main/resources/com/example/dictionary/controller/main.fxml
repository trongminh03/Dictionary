<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainPane" prefHeight="675.0" prefWidth="900.0" style="-fx-background-color: #5B84B1FF;" stylesheets="@../style/main.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionary.controller.MainController">
    <left>
        <VBox prefHeight="600.0" prefWidth="150.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER" prefHeight="156.0" prefWidth="150.0">
                    <children>
                        <ImageView fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/normal/dictionary.png" />
                            </image>
                        </ImageView>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="110.0" prefWidth="150.0">
                    <children>
                        <Button fx:id="searchButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: #5B84B1FF;" styleClass="button-search" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="110.0" prefWidth="150.0">
                    <children>
                        <Button fx:id="addButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: #5B84B1FF;" styleClass="button-add" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="110.0" prefWidth="150.0">
                    <children>
                        <Button fx:id="bookmarkButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: #5B84B1FF;" styleClass="button-bookmark" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="110.0" prefWidth="150.0">
                    <children>
                        <Button fx:id="apiTransButton" mnemonicParsing="false" prefHeight="64.0" prefWidth="64.0" style="-fx-background-color: #5B84B1FF;" styleClass="button-google" />
                    </children>
                </VBox>
            </children>
        </VBox>
    </left>
</BorderPane>
